---
import Listing from '../../layouts/Listing.astro';
import PostListItem from '../../components/PostListItem.astro';
import { getPostsByType } from '../../utils/posts';

const posts = await getPostsByType('entry');
---

<Listing title="Entries">
  <h1 class="page-title">Entries</h1>
  <p class="page-description">My blog posts and articles.</p>
  <div class="entries-list">
    {posts.map(post => <PostListItem post={post} />)}
  </div>
</Listing>

<style>
  .page-description {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
  }
</style>
