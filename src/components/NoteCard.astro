---
import { render, getCollection, type CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/dates';
import { getPostUrl } from '../utils/posts';
import TagList from './TagList.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, date, tags, sourceEntry, sourceEntryTitle } = post.data;
const url = getPostUrl(post);

// Get the rendered content
const { Content } = await render(post);

// Look up source entry to get correct URL
let sourceLinkUrl = url;
let sourceLinkLabel = sourceEntryTitle || 'source';

if (sourceEntry) {
  const allPosts = await getCollection('posts');
  // sourceEntry is like "building-ai-apps.md", post.id is like "entries/building-ai-apps"
  const sourceSlug = sourceEntry.replace('.md', '');
  const sourcePost = allPosts.find(p =>
    p.id === `entries/${sourceSlug}` ||
    p.id.endsWith(`/${sourceSlug}`) ||
    p.id === sourceSlug
  );
  if (sourcePost) {
    sourceLinkUrl = getPostUrl(sourcePost);
    if (!sourceEntryTitle) {
      sourceLinkLabel = sourcePost.data.title;
    }
  }
}
---

<article class="note-card">
  <div class="note-meta">
    <time datetime={date.toISOString()}>{formatDate(date)}</time>
  </div>

  <div class="note-content">
    <Content />
  </div>

  <div class="note-footer">
    <TagList tags={tags} />
    <a href={sourceLinkUrl} class="note-source-link">{sourceLinkLabel}</a>
  </div>
</article>

<style>
  .note-card {
    padding: var(--spacing-lg);
    border-left: 3px solid var(--accent);
    margin-bottom: var(--spacing-md);
  }

  .note-meta {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: var(--spacing-sm);
  }

  .note-content {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-primary);
  }

  .note-content :global(p) {
    margin: 0;
  }

  .note-content :global(p:last-child) {
    display: none; /* Hide the "Extracted from" line */
  }

  .note-content :global(code) {
    background: var(--bg-tertiary);
    padding: 0.1em 0.3em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .note-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--border);
  }

  .note-source-link {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .note-source-link:hover {
    color: var(--accent);
  }
</style>
