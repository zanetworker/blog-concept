---
import { getCollection, type CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/dates';
import { getPostUrl } from '../utils/posts';
import TagList from './TagList.astro';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { date, tags, source, sourceUrl, sourceEntry, sourceEntryTitle } = post.data;

// Get quote text from the post body (strip markdown formatting)
const rawContent = post.body || '';
const quoteMatch = rawContent.match(/^>\s*(.+?)(?:\n\n|$)/s);
const quoteText = quoteMatch
  ? quoteMatch[1].replace(/^>\s*/gm, '').replace(/\n/g, ' ').trim()
  : '';

// Look up source entry to get correct URL
let sourcePostUrl = '#';
let sourcePostTitle = sourceEntryTitle || 'source';

if (sourceEntry) {
  const allPosts = await getCollection('posts');
  // sourceEntry is like "building-ai-apps.md", post.id is like "entries/building-ai-apps"
  const sourceSlug = sourceEntry.replace('.md', '');
  const sourcePost = allPosts.find(p =>
    p.id === `entries/${sourceSlug}` ||
    p.id.endsWith(`/${sourceSlug}`) ||
    p.id === sourceSlug
  );
  if (sourcePost) {
    sourcePostUrl = getPostUrl(sourcePost);
    if (!sourceEntryTitle) {
      sourcePostTitle = sourcePost.data.title;
    }
  }
}
---

<article class="quote-card">
  <blockquote class="quote-text">
    {quoteText}
  </blockquote>

  {source && (
    <div class="quote-attribution">
      â€” {sourceUrl ? (
        <a href={sourceUrl} target="_blank" rel="noopener">{source}</a>
      ) : (
        <span>{source}</span>
      )}
    </div>
  )}

  <div class="quote-footer">
    <time datetime={date.toISOString()}>{formatDate(date)}</time>
    <TagList tags={tags} />
    <a href={sourcePostUrl} class="quote-source-link">from: {sourcePostTitle}</a>
  </div>
</article>

<style>
  .quote-card {
    padding: var(--spacing-lg) 0;
    border-bottom: 1px solid var(--border);
  }

  .quote-card:last-child {
    border-bottom: none;
  }

  .quote-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-primary);
    font-style: italic;
    margin: 0;
    padding-left: var(--spacing-md);
    border-left: 3px solid var(--accent);
  }

  .quote-attribution {
    margin-top: var(--spacing-md);
    padding-left: var(--spacing-md);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-secondary);
    font-style: normal;
  }

  .quote-attribution a {
    color: var(--accent);
  }

  .quote-attribution a:hover {
    text-decoration: underline;
  }

  .quote-footer {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .quote-source-link {
    margin-left: auto;
    color: var(--text-muted);
  }

  .quote-source-link:hover {
    color: var(--accent);
  }
</style>
